{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "jsx": "react",                      // Thêm hỗ trợ JSX cho React
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],  // Bao gồm cả tệp .tsx
    "exclude": ["node_modules"]
  }
  